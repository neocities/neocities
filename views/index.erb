            <% if !signed_in? %>
              <li>
                <a href="/signin" class="sign-In">Sign In</a>
              </li>
            <% else %>
              <li>
                <a href="/dashboard" class="sign-In">Dashboard</a>
              </li>
              <li>
                <a href="/settings" class="sign-In">Settings</a>
              </li>
              <li>
                <a href="/signout" class="sign-In">Sign Out</a>
