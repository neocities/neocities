      <a href="<%= site.uri %>" title="<%= site.title %>" target="_blank">
        <img src="<%= site.screenshot_url 'index.html', '210x158' %>" class="neo-SS" alt="<%= site.title %>" />
      </a>
    </li>
  <% end %>
</ul>
